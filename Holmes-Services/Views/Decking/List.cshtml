@model IEnumerable<DeckingViewModel>
@{
    ViewData["title"] = TempData["title"] = " | Decking Catalog";
}

<div>
    <h1>Decking Catalog</h1>
</div>
<div class="top-content">
    <div class="continater d-flex justify-content-center">
        <div id="deckCarousel" class="carousel" data-ride="carousel" data-interval="3000000">
            <div class="carousel-inner">
                @foreach (DeckingViewModel dvm in Model)
                {
                    <div class="carousel-item @(dvm == Model.First() ? "active" : "")">
                        <div class="continer-fluid">
                            <div class="card mx-auto col-md-3 col-10 mt-5">
                                <img class="mx-auto" src="~/images/@dvm.Image" alt="Picture of decking material" />
                                <div class="card-body text-center mx-auto">
                                    <div class="cvp">
                                        <h5 class="card-title font-weight-bold">@dvm.Name</h5>
                                        <p class="card-text">@dvm.Price</p>
                                        <a asp-area="" asp-action="Details" asp-controller="Decking" asp-route-id="@dvm.Id"
                                            class="btn px-auto">View Details</a>
                                        <a asp-area="" asp-action="Add" asp-controller="Decking" asp-route-id="@dvm.Id"
                                            class="btn px-auto">Add</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#deckCarousel" role="button" data-slide="prev">
                <i class="fa-solid fa-arrow-left-long" aria-hidden="true" style="color: slateblue"></i>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#deckCarousel" role="spinbutton" data-slide="next">
                <i class="fa-sollid fa-arrow-left-long" aria-hidden="true" style="color: slateblue"></i>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
